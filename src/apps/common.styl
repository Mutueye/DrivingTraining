// media query
MOBILE = '(max-width: 479px)'
TABLET = '(min-width: 480px) and (max-width: 930px)'
SMALL = '(max-width: 930px)'
WIDER = '(min-width: 1280px)'
RETINA = '(-webkit-min-device-pixel-ratio: 2), (min--moz-device-pixel-ratio: 2), (min-resolution: 2dppx), (min-resolution: 192dpi)'

// transition
transition()
	-webkit-transition arguments
	-moz-transition arguments
	-o-transition arguments
	transition arguments
box-shadow()
	-webkit-box-shadow arguments
	-moz-box-shadow arguments
	-o-box-shadow arguments
	box-shadow arguments

//hidden
.hidden
	display none !important

.mobile-hidden
	display block !important
	@media MOBILE
		display none !important
.mobile-visible
	display none
	@media MOBILE
		display block !important

.text-left
	text-align left
	td
		text-align left
.text-center
	text-align center
	td
		text-align center
.text-right
	text-align right
	td
		text-align right

// common layout
//-----------------------------------------------------------------------------------------
COMMON_SPACE = 20px
COMMON_SPACE_MOBILE = 12px
COMMON_WIDTH = 960px
COMMON_WIDTH_WIDER = 1200px



.row-container
	width COMMON_WIDTH
	display block
	height auto
	margin 0 auto
	@media WIDER
		width COMMON_WIDTH_WIDER
	@media MOBILE
		width auto
		margin-left COMMON_SPACE_MOBILE

.row-content
	width COMMON_WIDTH + COMMON_SPACE
	position relative
	display block
	@media WIDER
		width COMMON_WIDTH_WIDER + COMMON_SPACE
	@media MOBILE
		width 100%
.full-content
	width 100%
	height auto
	display block
