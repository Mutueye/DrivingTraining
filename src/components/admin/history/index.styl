/*历史记录
/*---------------------------------------------------------------------------------*/
.nav-history
	border-bottom 1px solid OCEAN_BLUE
	margin-bottom 30px
	& li
		margin 0
		position relative
		a
			margin 0
			line-height 30px
			border none !important
			border-radius 0px !important
			background-color transparent
			color #666666
			transition(all 0.2s ease-out)
			padding 5px 15px
		&:hover a
			background-color lighten(OCEAN_BLUE, 40%)
			color lighten(#ffffff, 40%)
		&.active a, 
		&.active a:focus, 
		&.acitve:hover a,
		&.active a:hover
			background-color OCEAN_BLUE !important
			color #ffffff !important
		.active-arrow
			position absolute
			width 8px
			height 0px
			border-top 8px solid transparent
			border-left 8px solid transparent
			border-right 8px solid transparent
			left 50%
			margin-left -8px
			bottom 0px
			transition(all 0.2s ease-out)
		&.active .active-arrow
			border-top 8px solid OCEAN_BLUE
			bottom -8px
.timeline:before
	content none
.timeline-body
	margin-left 80px
.timeline-icon
	width 56px
	height 56px
	border 4px solid GRAY_D6
	padding-top 0px !important
	padding-left 0px !important
	text-align center
	line-height 48px
	i
		text-align center
		line-height 48px
		font-size 16px !important
.timeline-body
	margin-top 0px
	margin-bottom 20px
.timeline-body-arrow
	top 14px !important
.timeline-item
	display block
	overflow hidden
	background-image url("../images/timeline-bg.png")
	background-position 26px top
	background-repeat repeat-y
.timeline-item.last,
.timeline-item:last-child{
	background-image none
}
/*END 历史记录*/
