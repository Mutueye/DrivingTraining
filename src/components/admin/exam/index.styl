.exam-radio-list
	label
		background-color transparent
		padding 5px
		cursor pointer
		&:hover
			background-color GRAY_E3
		&.bg-right
			background-color GREEN
			color #ffffff
		&.bg-wrong
			background-color ORANGE_RED
			color #ffffff
		i
			color #ffffff
			margin-top 3px
.label-btnsize
	border-width 0
	padding 7px 14px
	font-size 14px
	outline none !important
	background-image none !important
	filter none
	line-height 1.42857143
.q-matrix
	margin-right -2px
	margin-top 25px
	.col-content
		margin-right 2px
		margin-bottom 2px
		.q-btn
			display block
			text-decoration none
			background-color GRAY_E3
			color #666666
			text-align center
			font-size 12px
			line-height 30px
			&:hover,&.sel
				background-color darken(GRAY_E3, 10%)
				color #333333
			&.finished
				color #ffffff
				background-color BLUE
				&:hover,&.sel
					background-color darken(BLUE, 20%)
			&.current
				color #ffffff
				background-color OCEAN_BLUE
				&:hover,&.sel
					background-color darken(OCEAN_BLUE, 20%)
			&.right
				color #ffffff
				background-color GREEN
				&:hover,&.sel
					background-color darken(GREEN, 20%)
			&.wrong
				color #ffffff
				background-color ORANGE_RED
				&:hover,&.sel
					background-color darken(ORANGE_RED, 20%)
			&.sel
				background-image url("../images/q-sel-bg.png")
				background-position center 24px
				font-weight bold
				background-repeat no-repeat
.q-img
	display block
	margin 0 auto
	max-width 100%
	max-height 150px
	width auto
	height auto
.result-block
	display block
	padding 0px
	background-color GREEN
	margin-bottom 25px
	overflow hidden
	.result-point
		display block
		float left 
		color #ffffff
		line-height 30px
		font-size 30px
		padding 10px 0px
		width 100px
		text-align center
	&.passed
		background-color GREEN
		.result-point
			background-color darken(GREEN, 20%)
	&.failed
		background-color ORANGE_RED
		.result-point
			background-color darken(ORANGE_RED, 20%)
	span
		display block
		float left
		font-size 15px
		padding 10px 15px
		line-height 30px
		color #ffffff
.form-questionnaire
	.form-group
		padding-bottom 20px
		margin-bottom 20px
		border-bottom 1px dotted GRAY_E3
	




